<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="STDOUT_SEMI" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>[%d{yyyy-MM-dd HH:mm:ss.SSS}] [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="FILE_SEMI" class="ch.qos.logback.core.FileAppender">
        <file>semi_structured_logs.log</file>
        <encoder>
            <pattern>[%d{yyyy-MM-dd HH:mm:ss.SSS}] [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="STDOUT_SEMI" />
        <appender-ref ref="FILE_SEMI" />
    </root>
</configuration>